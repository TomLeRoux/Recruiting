<h1>Start your new topic</h1>

<div class="container">
    <%= form_for @newTopic do |topic|%>
        <div class="form-group">
            <label>Title: </label>
            <%= topic.text_field :title, class: "form-control"%>
        </div>
        <div class="form-group">
            <label>Description: </label>
            <%= topic.text_area :description, class: "form-control"%>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    <% end %>
</div>