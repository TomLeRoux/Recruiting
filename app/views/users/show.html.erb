<h2 class="py-3">My profil</h2>
<div class="d-flex flex-row justify-content-between">
    <div class="d-flex flex-row">
        <div class="pr-5">
            <% if @picture.avatar.attached? %>
                <%=image_tag(@picture.avatar, :size => "150x150") %>
            <% end %>
        </div>
        <div class="d-flex flex-column">
            <span>Email : <%= @user.email%></span>
            <span>Name : <%= @user.name%></span>
            <div>
                <span>CV:
                <% if @cv.avatar.attached? %>
                    <%= link_to(@cv.avatar.attachment.filename, rails_blob_path(@cv.avatar, disposition: "attachment"))%>
                <% else %>
                    No cv uploaded
                <% end %>
                </span>
            </div>
        </div>
    </div>
    <% if @user.id == session[:user_id] %>
        <div>
            <a role="button" href="<%= edit_user_path%>" class="btn btn-outline-primary mr-2">Edit Profil</a>
        </div>
    <% end %>
</div>

<div class="py-3">
    <h3>Description</h3>
    <p>
        <%= @user.description%>
    </p>
</div>
